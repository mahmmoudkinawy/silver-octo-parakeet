@using BookApp.Models
@model Category
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="danger"></div>
        <div class="mb-3 col-4">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 col-4">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
             <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px"><i class="bi bi-plus-circle"></i> Create</button>
        <a asp-controller="Category" asp-action="index" class="btn btn-secondary" style="width:150px;">
            <i class="bi bi-skip-backward-circle-fill"></i> Back to list
        </a>
    </div>
</form>
@section Scripts{
    @{
<partial name="_ValidationScriptsPartial" />
}
}